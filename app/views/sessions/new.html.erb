<h1>Log in</h1>
<%= form_tag sessions_path do %>
  <fieldset>
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, params[:email] %>
  </fieldset>
  <fieldset>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </fieldset>
  <%= submit_tag "Log in", :disable_with => 'Submiting...' %>
<% end -%>
