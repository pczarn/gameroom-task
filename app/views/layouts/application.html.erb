<!DOCTYPE html>
<html>
  <head>
    <title>GameroomTask</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="nav">
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= button_to "Log out", log_out_path, method: :delete %>
      <% else %>
        <%= link_to "Log in", log_in_path %>
        or
        <%= link_to "register", sign_up_path %>
      <% end %>
    </div>

    <% if flash.alert %>
      <h1>Alert</h1>
      <%= content_tag :div, flash.alert, id: "flash_alert" %>
    <% end %>

    <%= yield %>
  </body>
</html>
