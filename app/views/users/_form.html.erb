<fieldset>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</fieldset>
<fieldset>
  <legend>Avatar</legend>
  <%= f.file_field :image %>
</fieldset>
<fieldset>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
</fieldset>
<fieldset>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
</fieldset>
<fieldset>
  <%= f.label :password_confirmation, "Password confirmation" %>
  <%= f.password_field :password_confirmation %>
</fieldset>
<%= f.submit "Submit", :disable_with => 'Submiting...' %>
