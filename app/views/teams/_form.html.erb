<fieldset>
  <legend>Name</legend>
  <%= f.text_field :name %>
</fieldset>

<% if f.object.new_record? %>
  <fieldset>
    <legend>Members</legend>
    <%= f.collection_check_boxes(:member_ids, User.all, :id, :name) do |fc| %>
      <%= fc.check_box %>
      <%= fc.label %>
    <% end %>
  </fieldset>
<% end %>

<%= f.submit "Submit" %>
